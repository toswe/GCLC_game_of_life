number WIDTH 14
number HEIGHT 10
number ITERATIONS 20
number CELL_SIZE 10
number PROB 0.7

expression WIDTH {WIDTH + 2}
expression HEIGHT {HEIGHT + 2}

point CC 1 -1 20 -1
getx frame CC

number start 2

procedure draw_rect {x y size}
{
	number X x
	number Y y

	expression X {(X - 1)*size}
	expression Y {(Y - 1)*size}
	point p1 X Y

	expression X {X-size}
	expression Y {Y-size}

	point p2 X Y
	fillrectangle p1 p2
}


array game_of_life { WIDTH HEIGHT ITERATIONS }

%%%%%%%%%%%% MAIN %%%%%%%%%%%%%%%

%%%%% GLIDER %%%%%%
expression game_of_life[5][5][1] {1}
expression game_of_life[6][5][1] {1}
expression game_of_life[7][5][1] {1}
expression game_of_life[7][4][1] {1}
expression game_of_life[6][3][1] {1}
%%% END OF GLIDER %%%

number w start
while {w < WIDTH }
{
	number h start
	while {h < HEIGHT}
	{
		random r
		if_then_else {r > PROB}
		{
			%expression game_of_life[w][h][1] {1}

		}
		{
		}

		expression h {h + 1}
	}
	expression w {w + 1}
}

number i 2
while {i <= frame}
{
	number w start
	while {w < WIDTH }
	{
		number h start
		while {h < HEIGHT}
		{

			expression surrounding {game_of_life[w-1][h-1][i-1]+game_of_life[w-1][h][i-1]+game_of_life[w-1][h+1][i-1]+game_of_life[w][h+1][i-1]+game_of_life[w+1][h+1][i-1]+game_of_life[w+1][h][i-1]+game_of_life[w+1][h-1][i-1]+game_of_life[w][h-1][i-1]}

			if_then_else {game_of_life[w][h][i-1] > 0}
			{
				if_then_else {surrounding == 3 || surrounding == 2}
				{
					expression game_of_life[w][h][i] {1}
				}
				{
				}
			}
			{
				if_then_else {surrounding == 3}
				{
					expression game_of_life[w][h][i] {1}
				}
				{
				}
			}

			expression h {h + 1}
		}
		expression w {w + 1}
	}
	expression i {i + 1}
}


%%%%%%%%%%% DRAW %%%%%%%%%%%%%%%

number w start
while {w < WIDTH }
{
	number h start
	while {h < HEIGHT}
	{

		if_then_else {0 < game_of_life[w][h][frame]}
		{
			call draw_rect {w h CELL_SIZE}
		}
		{
		}
		

		expression h {h + 1}
	}
	expression w {w + 1}
}

animation_frames ITERATIONS 5
